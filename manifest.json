{
	"short_name": "Time Tool",
	"name": "Time Tool",
	"version": "1.0.0",
	"manifest_version": 3,
	"permissions": [
		"storage",
		"tabs",
		"activeTab",
		"scripting",
		"contextMenus"
	],
	"action": {
		"default_popup": "/build/index.html",
		"default_icon": {
			"16": "/images/icon-16.png",
			"32": "/images/icon-32.png",
			"48": "/images/icon-48.png",
			"128": "/images/icon-128.png"
		}
	},
	"icons": {
		"16": "/images/icon-16.png",
		"32": "/images/icon-32.png",
		"48": "/images/icon-48.png",
		"128": "/images/icon-128.png"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": [
				"/js/moment.js",
				"/js/moment-timezone-with-data.js",
				"/js/handle-selection.js"
			]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"/js/popup-iframe-logic.js",
				"popup.css",
				"/images/copy.png",
				"/images/checked.png"
			],
			"matches": ["http://*/*", "https://*/*"]
		}
	]
}
